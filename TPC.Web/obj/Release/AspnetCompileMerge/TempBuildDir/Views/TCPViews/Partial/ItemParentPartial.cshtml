@model TPC.Core.Models.ItemParentViewModel
@using TPC.Core.Models;
@{int result = 0; int quotent = Math.DivRem(Model.ListItemVM.Count, 6, out result); int startIndex = 0; int endIndex = 6; int extraCount = 0;}
@if (result > 0)
{
    extraCount = 1;
}

<script src="~/Scripts/js/metro/metro-carousel.js"></script>
    

<div class="carousel place-left " data-role="carousel" style="height:140px;width:auto;display:block">
    
    @for (int i = 0; i < @quotent + extraCount; i++)
    {
    <div class="slide">
       
       @{ endIndex= (i+1)*6;}
        @if (endIndex > Model.ListItemVM.Count)
        {
            endIndex = startIndex + result;
        }
        @for (; startIndex < endIndex;startIndex++)
        {
            ItemViewModel obj = Model.ListItemVM[startIndex];
            <div class="place-left">
                @Html.Partial("../TCPViews/Partial/KPLItemPartial", Model.ListItemVM[startIndex])
            </div>
        }
         @*<div class="place-left itemBeforeAfterSpace">

        </div>*@
    </div>
    }
    <a class="controls left">
        <img src="~/Images/Left-Arrow.png" /></a>
    <a class="controls right">
        <img class="disabled" src="~/Images/Right-Arrow.png" /></a>

</div>