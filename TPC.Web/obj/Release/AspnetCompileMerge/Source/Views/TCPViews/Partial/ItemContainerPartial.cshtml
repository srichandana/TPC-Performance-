<script type="text/javascript">
    $(function () {
        //Hide the div tag when page is loading
        $('#divListView').show();
        $('#ViewList').hide();
        $('#divTabularView').hide();
        $('#divViewContent').addClass('divContain-scroll');

        //For Showing the TabularView div
        $("#ViewTabular").click(function () {
            $('#divListView').hide();
            $('#divTabularView').show();
            $('#ViewList').show();
            $('#ViewTabular').hide();
            $('#liListView').hide()
            $('#liTabularView').show()
            $('#divViewContent').removeClass('divContain-scroll');
        });

        //For Showing the ListView div
        $("#ViewList").click(function () {
            $('#divListView').show();
            $('#divTabularView').hide();
            $('#ViewList').hide();
            $('#ViewTabular').show();
            $('#liListView').show()
            $('#liListView').addClass('active');
            $('#liTabularView').hide()
            $('#divViewContent').addClass('divContain-scroll');
        });
    });
</script>


 
